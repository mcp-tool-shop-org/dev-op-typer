<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.DemonstrationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Visibility="Collapsed"
    IsTabStop="False"
    AutomationProperties.Name="Alternative approaches">

    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            CornerRadius="8"
            Padding="12"
            Margin="0,0,0,8">
        <StackPanel Spacing="6">
            <!-- Expand/collapse toggle -->
            <ToggleButton x:Name="ExpandToggle"
                          Content="Approaches"
                          FontSize="11"
                          Padding="6,3"
                          MinWidth="0"
                          IsChecked="False"
                          TabIndex="201"
                          AutomationProperties.Name="Show or hide alternative approaches"
                          ToolTipService.ToolTip="Expand to see alternative ways to write this snippet"/>

            <!-- Content area (collapsed by default, non-interrupting) -->
            <StackPanel x:Name="ContentArea"
                        Spacing="8"
                        Visibility="Collapsed"
                        AutomationProperties.LiveSetting="Off">

                <!-- All demonstrations rendered here -->
                <ItemsControl x:Name="DemonstrationsList"
                              IsTabStop="False"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
