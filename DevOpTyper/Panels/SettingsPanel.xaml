<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="280">

    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            Padding="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <TextBlock Text="Settings"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <!-- Language Selection -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Language"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="LanguageCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Python"/>
                        <ComboBoxItem Content="JavaScript"/>
                        <ComboBoxItem Content="C#"/>
                        <ComboBoxItem Content="Java"/>
                        <ComboBoxItem Content="SQL"/>
                        <ComboBoxItem Content="Bash"/>
                    </ComboBox>
                </StackPanel>

                <!-- Difficulty -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Difficulty"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="DifficultyCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Beginner"/>
                        <ComboBoxItem Content="Intermediate"/>
                        <ComboBoxItem Content="Advanced"/>
                        <ComboBoxItem Content="Expert"/>
                    </ComboBox>
                </StackPanel>

                <!-- Audio Settings -->
                <TextBlock Text="Audio"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Ambient Volume"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Slider x:Name="AmbientVolumeSlider"
                            Minimum="0" Maximum="100" Value="50"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Keyboard Sound Volume"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Slider x:Name="KeyboardVolumeSlider"
                            Minimum="0" Maximum="100" Value="70"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Keyboard Sound"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="KeyboardThemeCombo"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="UI Sound Volume"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Slider x:Name="UiVolumeSlider"
                            Minimum="0" Maximum="100" Value="60"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Soundscape"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="SoundscapeCombo"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Gameplay -->
                <TextBlock Text="Gameplay"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <ToggleSwitch x:Name="HardcoreModeToggle"
                              Header="Hardcore Mode"
                              OffContent="Off"
                              OnContent="On"/>

                <ToggleSwitch x:Name="AdaptiveDifficultyToggle"
                              Header="Adaptive Difficulty"
                              OffContent="Off"
                              OnContent="On"
                              IsOn="True"/>

                <!-- Practice -->
                <TextBlock Text="Practice"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Practice Config"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="PracticeConfigCombo"
                              HorizontalAlignment="Stretch"
                              AutomationProperties.Name="Practice configuration"/>
                </StackPanel>

                <TextBlock x:Name="PracticeConfigDescription"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           IsTabStop="False"/>

                <ToggleSwitch x:Name="ShowIntentChipsToggle"
                              Header="Show Intent Chips"
                              OffContent="Hidden"
                              OnContent="Visible"
                              IsOn="True"/>

                <ToggleSwitch x:Name="ShowSuggestionsToggle"
                              Header="Show Suggestions"
                              OffContent="Hidden"
                              OnContent="Visible"
                              IsOn="True"
                              AutomationProperties.Name="Show or hide practice suggestions"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Default Intent"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="DefaultIntentCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0"
                              AutomationProperties.Name="Default practice intent">
                        <ComboBoxItem Content="None" Tag=""/>
                        <ComboBoxItem Content="Focus" Tag="Focus"/>
                        <ComboBoxItem Content="Challenge" Tag="Challenge"/>
                        <ComboBoxItem Content="Maintenance" Tag="Maintenance"/>
                        <ComboBoxItem Content="Exploration" Tag="Exploration"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Focus Area"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="FocusAreaCombo"
                                  HorizontalAlignment="Stretch"
                                  SelectedIndex="0"
                                  AutomationProperties.Name="Focus area for snippet selection">
                            <ComboBoxItem Content="None" Tag=""/>
                            <ComboBoxItem Content="Brackets &amp; Braces" Tag="brackets"/>
                            <ComboBoxItem Content="Operators" Tag="operators"/>
                            <ComboBoxItem Content="String Handling" Tag="strings"/>
                            <ComboBoxItem Content="Control Flow" Tag="control"/>
                            <ComboBoxItem Content="Functions" Tag="functions"/>
                            <ComboBoxItem Content="Data Structures" Tag="data"/>
                        </ComboBox>
                        <Button x:Name="ClearFocusButton"
                                Content="Clear"
                                Grid.Column="1"
                                FontSize="11"
                                Padding="6,3"
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Clear focus area"/>
                    </Grid>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Practice Note"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBox x:Name="PracticeNoteBox"
                             PlaceholderText="What are you working on?"
                             MaxLength="200"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             FontSize="12"
                             AutomationProperties.Name="Practice note"/>
                </StackPanel>

                <!-- Typing Rules -->
                <TextBlock Text="Typing Rules"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Whitespace"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="WhitespaceCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Strict" Tag="Strict"/>
                        <ComboBoxItem Content="Lenient" Tag="Lenient"/>
                        <ComboBoxItem Content="Normalize" Tag="Normalize"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Line Endings"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="LineEndingCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Normalize" Tag="Normalize"/>
                        <ComboBoxItem Content="Exact" Tag="Exact"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Trailing Spaces"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="TrailingSpaceCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Strict" Tag="Strict"/>
                        <ComboBoxItem Content="Ignore" Tag="Ignore"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Backspace"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="BackspaceCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Always" Tag="Always"/>
                        <ComboBoxItem Content="Limited" Tag="Limited"/>
                        <ComboBoxItem Content="Never" Tag="Never"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Accuracy Floor for XP"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="AccuracyFloorSlider"
                                Minimum="0" Maximum="100" Value="70"
                                StepFrequency="5"/>
                        <TextBlock x:Name="AccuracyFloorLabel"
                                   Grid.Column="1"
                                   Text="70%"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   MinWidth="32"/>
                    </Grid>
                </StackPanel>

                <!-- Accessibility -->
                <TextBlock Text="Accessibility"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <ToggleSwitch x:Name="HighContrastToggle"
                              Header="High Contrast"
                              OffContent="Off"
                              OnContent="On"/>

                <ToggleSwitch x:Name="ReducedMotionToggle"
                              Header="Reduced Motion"
                              OffContent="Off"
                              OnContent="On"/>

                <!-- User Snippets -->
                <TextBlock Text="Your Snippets"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <TextBlock x:Name="UserSnippetStatus"
                           Text="No user snippets loaded"
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           AutomationProperties.LiveSetting="Polite"
                           IsTabStop="False"/>

                <TextBlock x:Name="UserSnippetErrors"
                           FontSize="10"
                           Foreground="{ThemeResource SystemFillColorCautionBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           AutomationProperties.LiveSetting="Assertive"
                           IsTabStop="False"/>

                <Button x:Name="OpenUserSnippetsButton"
                        Content="Open Snippets Folder"
                        FontSize="11"
                        Padding="8,4"
                        Margin="0,4,0,0"
                        AutomationProperties.Name="Open snippets folder in file explorer"
                        ToolTipService.ToolTip="Opens the folder where you can add your own snippet files"/>

                <!-- Save Button -->
                <Button x:Name="SaveSettingsButton"
                        Content="Save Settings"
                        HorizontalAlignment="Stretch"
                        Style="{ThemeResource AccentButtonStyle}"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
