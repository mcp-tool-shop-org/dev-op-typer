<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Optional stronger contrast theme -->
    <Color x:Key="DotBgColor">#FF000000</Color>
    <Color x:Key="DotSurfaceColor">#FF0A0A0A</Color>
    <Color x:Key="DotSurface2Color">#FF111111</Color>

    <Color x:Key="DotTextColor">#FFFFFFFF</Color>
    <Color x:Key="DotTextMutedColor">#FFCCCCCC</Color>

    <Color x:Key="DotAccent1Color">#FF00FFD5</Color>
    <Color x:Key="DotAccent2Color">#FF66A3FF</Color>
    <Color x:Key="DotAccentWarnColor">#FFFFFF66</Color>
    <Color x:Key="DotErrorColor">#FFFF4D4D</Color>

    <SolidColorBrush x:Key="DotBgBrush" Color="{StaticResource DotBgColor}"/>
    <SolidColorBrush x:Key="DotSurfaceBrush" Color="{StaticResource DotSurfaceColor}"/>
    <SolidColorBrush x:Key="DotSurface2Brush" Color="{StaticResource DotSurface2Color}"/>
    <SolidColorBrush x:Key="DotTextBrush" Color="{StaticResource DotTextColor}"/>
    <SolidColorBrush x:Key="DotTextMutedBrush" Color="{StaticResource DotTextMutedColor}"/>
    <SolidColorBrush x:Key="DotAccent1Brush" Color="{StaticResource DotAccent1Color}"/>
    <SolidColorBrush x:Key="DotAccent2Brush" Color="{StaticResource DotAccent2Color}"/>
    <SolidColorBrush x:Key="DotAccentWarnBrush" Color="{StaticResource DotAccentWarnColor}"/>
    <SolidColorBrush x:Key="DotErrorBrush" Color="{StaticResource DotErrorColor}"/>
</ResourceDictionary>
