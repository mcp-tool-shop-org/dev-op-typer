<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.TypingPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Prompt/Target Display -->
        <Border Grid.Row="0" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <StackPanel Spacing="8">
                <TextBlock x:Name="SnippetTitle" 
                           Text="Sample Snippet" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="SnippetLanguage" 
                           Text="python" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="12"/>
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="TargetCode" 
                               Text="def hello_world():&#x0A;    print('Hello, World!')" 
                               FontFamily="Consolas"
                               FontSize="14"
                               TextWrapping="Wrap"
                               IsTextSelectionEnabled="True"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Typing Area -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Type the code exactly as shown above:"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <TextBox x:Name="TypingBox"
                         Grid.Row="1"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="14"
                         PlaceholderText="Start typing here..."
                         MinHeight="150"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Spacing="12">
            <Button x:Name="StartButton" Content="Start Test" Style="{ThemeResource AccentButtonStyle}"/>
            <Button x:Name="ResetButton" Content="Reset"/>
            <Button x:Name="SkipButton" Content="Skip"/>
        </StackPanel>
    </Grid>
</UserControl>
