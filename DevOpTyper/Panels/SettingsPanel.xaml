<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="280">

    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            Padding="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <TextBlock Text="Settings"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <!-- Language Selection -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Language"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="LanguageCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Python"/>
                        <ComboBoxItem Content="JavaScript"/>
                        <ComboBoxItem Content="C#"/>
                        <ComboBoxItem Content="Java"/>
                        <ComboBoxItem Content="SQL"/>
                        <ComboBoxItem Content="Bash"/>
                    </ComboBox>
                </StackPanel>

                <!-- Difficulty -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Difficulty"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="DifficultyCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Beginner"/>
                        <ComboBoxItem Content="Intermediate"/>
                        <ComboBoxItem Content="Advanced"/>
                        <ComboBoxItem Content="Expert"/>
                    </ComboBox>
                </StackPanel>

                <!-- Audio Settings -->
                <TextBlock Text="Audio"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Ambient Volume"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Slider x:Name="AmbientVolumeSlider"
                            Minimum="0" Maximum="100" Value="50"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Keyboard Sound Volume"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Slider x:Name="KeyboardVolumeSlider"
                            Minimum="0" Maximum="100" Value="70"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Keyboard Sound"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="KeyboardThemeCombo"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="UI Sound Volume"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Slider x:Name="UiVolumeSlider"
                            Minimum="0" Maximum="100" Value="60"/>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Soundscape"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="SoundscapeCombo"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Gameplay -->
                <TextBlock Text="Gameplay"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <ToggleSwitch x:Name="HardcoreModeToggle"
                              Header="Hardcore Mode"
                              OffContent="Off"
                              OnContent="On"/>

                <ToggleSwitch x:Name="AdaptiveDifficultyToggle"
                              Header="Adaptive Difficulty"
                              OffContent="Off"
                              OnContent="On"
                              IsOn="True"/>

                <!-- Practice -->
                <TextBlock Text="Practice"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Practice Config"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="PracticeConfigCombo"
                              HorizontalAlignment="Stretch"
                              AutomationProperties.Name="Practice configuration preset"
                              ToolTipService.ToolTip="Choose a practice config to adjust difficulty, warmup, and typing rules"/>
                </StackPanel>

                <TextBlock x:Name="PracticeConfigDescription"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           IsTabStop="False"
                           AutomationProperties.LiveSetting="Polite"/>

                <TextBlock x:Name="PracticeConfigErrors"
                           FontSize="10"
                           Foreground="{ThemeResource SystemFillColorCautionBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           IsTabStop="False"
                           AutomationProperties.LiveSetting="Assertive"/>

                <ToggleSwitch x:Name="ShowSuggestionsToggle"
                              Header="Show Suggestions"
                              OffContent="Hidden"
                              OnContent="Visible"
                              IsOn="True"
                              AutomationProperties.Name="Show or hide practice suggestions"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Focus Area"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="FocusAreaCombo"
                                  HorizontalAlignment="Stretch"
                                  SelectedIndex="0"
                                  AutomationProperties.Name="Focus area for snippet selection">
                            <ComboBoxItem Content="None" Tag=""/>
                            <ComboBoxItem Content="Brackets &amp; Braces" Tag="brackets"/>
                            <ComboBoxItem Content="Operators" Tag="operators"/>
                            <ComboBoxItem Content="String Handling" Tag="strings"/>
                            <ComboBoxItem Content="Control Flow" Tag="control"/>
                            <ComboBoxItem Content="Functions" Tag="functions"/>
                            <ComboBoxItem Content="Data Structures" Tag="data"/>
                        </ComboBox>
                        <Button x:Name="ClearFocusButton"
                                Content="Clear"
                                Grid.Column="1"
                                FontSize="11"
                                Padding="6,3"
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                AutomationProperties.Name="Clear focus area"/>
                    </Grid>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Practice Note"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBox x:Name="PracticeNoteBox"
                             PlaceholderText="What are you working on?"
                             MaxLength="200"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             FontSize="12"
                             AutomationProperties.Name="Practice note"/>
                </StackPanel>

                <!-- Typing Rules -->
                <TextBlock Text="Typing Rules"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel Spacing="4">
                    <TextBlock Text="Whitespace"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="WhitespaceCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Strict" Tag="Strict"/>
                        <ComboBoxItem Content="Lenient" Tag="Lenient"/>
                        <ComboBoxItem Content="Normalize" Tag="Normalize"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Line Endings"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="LineEndingCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Normalize" Tag="Normalize"/>
                        <ComboBoxItem Content="Exact" Tag="Exact"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Trailing Spaces"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="TrailingSpaceCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Strict" Tag="Strict"/>
                        <ComboBoxItem Content="Ignore" Tag="Ignore"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Backspace"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ComboBox x:Name="BackspaceCombo"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Always" Tag="Always"/>
                        <ComboBoxItem Content="Limited" Tag="Limited"/>
                        <ComboBoxItem Content="Never" Tag="Never"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Accuracy Floor for XP"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="AccuracyFloorSlider"
                                Minimum="0" Maximum="100" Value="70"
                                StepFrequency="5"/>
                        <TextBlock x:Name="AccuracyFloorLabel"
                                   Grid.Column="1"
                                   Text="70%"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   MinWidth="32"/>
                    </Grid>
                </StackPanel>

                <!-- Accessibility -->
                <TextBlock Text="Accessibility"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <ToggleSwitch x:Name="HighContrastToggle"
                              Header="High Contrast"
                              OffContent="Off"
                              OnContent="On"/>

                <ToggleSwitch x:Name="ReducedMotionToggle"
                              Header="Reduced Motion"
                              OffContent="Off"
                              OnContent="On"/>

                <!-- User Snippets -->
                <TextBlock Text="Your Snippets"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <TextBlock x:Name="UserSnippetStatus"
                           Text="No user snippets loaded"
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           AutomationProperties.LiveSetting="Polite"
                           IsTabStop="False"/>

                <TextBlock x:Name="UserSnippetErrors"
                           FontSize="10"
                           Foreground="{ThemeResource SystemFillColorCautionBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           AutomationProperties.LiveSetting="Assertive"
                           IsTabStop="False"/>

                <StackPanel Orientation="Horizontal"
                            Spacing="4"
                            AutomationProperties.Name="Snippet actions">
                    <Button x:Name="PasteCodeButton"
                            Content="Paste Code"
                            FontSize="11"
                            Padding="8,4"
                            AutomationProperties.Name="Add code from clipboard to your library"
                            ToolTipService.ToolTip="Paste code from clipboard — language auto-detected, available for practice immediately"
                            AccessKey="V"/>
                    <Button x:Name="OpenUserSnippetsButton"
                            Content="Open Folder"
                            FontSize="11"
                            Padding="8,4"
                            AutomationProperties.Name="Open snippets folder in file explorer"
                            ToolTipService.ToolTip="Opens the folder where you can add your own snippet files"
                            AccessKey="O"/>
                    <Button x:Name="ExportBundleButton"
                            Content="Export"
                            FontSize="11"
                            Padding="8,4"
                            AutomationProperties.Name="Export your snippets and configs as a ZIP file"
                            ToolTipService.ToolTip="Save all your snippets and configs as a portable ZIP"
                            AccessKey="E"/>
                    <Button x:Name="ImportBundleButton"
                            Content="Import"
                            FontSize="11"
                            Padding="8,4"
                            AutomationProperties.Name="Import snippets and configs from a ZIP file"
                            ToolTipService.ToolTip="Load snippets and configs from a portable ZIP"
                            AccessKey="I"/>
                </StackPanel>

                <TextBlock x:Name="PasteCodeStatus"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           IsTabStop="False"
                           AutomationProperties.LiveSetting="Polite"/>

                <Button x:Name="ImportFolderButton"
                        Content="Import Folder"
                        FontSize="11"
                        Padding="8,4"
                        AutomationProperties.Name="Index code files from a local folder for practice"
                        ToolTipService.ToolTip="Pick a folder of code files — they'll be indexed and available for practice"
                        AccessKey="F"/>

                <TextBlock x:Name="ImportFolderStatus"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           IsTabStop="False"
                           AutomationProperties.LiveSetting="Polite"/>

                <TextBlock x:Name="BundleStatus"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           IsTabStop="False"
                           AutomationProperties.LiveSetting="Polite"/>

                <!-- Community Content -->
                <TextBlock Text="Community"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <TextBlock x:Name="CommunityContentStatus"
                           Text="No community content"
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           AutomationProperties.LiveSetting="Polite"
                           IsTabStop="False"/>

                <StackPanel Orientation="Horizontal"
                            Spacing="4"
                            AutomationProperties.Name="Community actions">
                    <Button x:Name="OpenCommunityFolderButton"
                            Content="Open Folder"
                            FontSize="11"
                            Padding="8,4"
                            AutomationProperties.Name="Open community content folder in file explorer"
                            ToolTipService.ToolTip="Opens the folder where community content lives"
                            AccessKey="C"/>
                    <Button x:Name="ImportCommunityBundleButton"
                            Content="Import Bundle"
                            FontSize="11"
                            Padding="8,4"
                            AutomationProperties.Name="Import a community bundle from a ZIP file"
                            ToolTipService.ToolTip="Import snippets and configs from a shared bundle"/>
                </StackPanel>

                <ToggleSwitch x:Name="CommunitySignalsToggle"
                              Header="Show community hints"
                              IsOn="True"
                              FontSize="11"
                              AutomationProperties.Name="Show or hide community signal hints"
                              ToolTipService.ToolTip="When enabled, shows collective patterns like typical WPM for each snippet"/>

                <!-- Library Stats (v0.8.1) -->
                <TextBlock Text="My Library"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <TextBlock x:Name="LibraryStatsText"
                           Text="Loading..."
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap"
                           IsTabStop="False"
                           AutomationProperties.Name="Library content statistics"/>

                <!-- Teaching (v0.8.0) -->
                <TextBlock Text="Teaching"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <ToggleSwitch x:Name="ShowScaffoldsToggle"
                              Header="Show scaffold hints"
                              IsOn="True"
                              FontSize="11"
                              AutomationProperties.Name="Show or hide scaffold hints on snippets"
                              ToolTipService.ToolTip="When enabled, shows optional learning hints that fade with competence"/>

                <ToggleSwitch x:Name="ShowDemonstrationsToggle"
                              Header="Show demonstrations"
                              IsOn="True"
                              FontSize="11"
                              AutomationProperties.Name="Show or hide alternative approach demonstrations"
                              ToolTipService.ToolTip="When enabled, shows different valid approaches to each snippet"/>

                <ToggleSwitch x:Name="ShowGuidanceToggle"
                              Header="Show guidance notes"
                              IsOn="True"
                              FontSize="11"
                              AutomationProperties.Name="Show or hide collective guidance notes"
                              ToolTipService.ToolTip="When enabled, shows contextual observations from collective experience"/>

                <ToggleSwitch x:Name="ShowSkillLayersToggle"
                              Header="Show skill layers"
                              IsOn="True"
                              FontSize="11"
                              AutomationProperties.Name="Show or hide skill depth layers"
                              ToolTipService.ToolTip="When enabled, shows content at different depth levels"/>

                <!-- Guided Mode (v1.0.0) -->
                <TextBlock Text="Guided Mode"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,12,0,0"
                           AutomationProperties.HeadingLevel="Level2"/>

                <ToggleSwitch x:Name="GuidedModeToggle"
                              Header="Enable guided practice"
                              IsOn="False"
                              FontSize="11"
                              AutomationProperties.Name="Enable or disable guided practice mode"
                              ToolTipService.ToolTip="When enabled, prefers snippets matching your weak spots. Off = v0.9 behavior."/>

                <TextBlock Text="Prefers snippets matching your weak symbol groups."
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           Margin="0,-4,0,0"
                           TextWrapping="Wrap"/>
                <TextBlock Text="Never changes difficulty level or scoring — only snippet ordering."
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextWrapping="Wrap"/>

                <!-- Save Button -->
                <Button x:Name="SaveSettingsButton"
                        Content="Save Settings"
                        HorizontalAlignment="Stretch"
                        Style="{ThemeResource AccentButtonStyle}"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
