<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.TypingPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:DevOpTyper.Controls"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Live Per-Character Typing Display -->
        <Border Grid.Row="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <StackPanel Spacing="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="SnippetTitle"
                               Text="Sample Snippet"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="SnippetLanguage"
                               Grid.Column="1"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Per-character diff renderer (replaces old plain TargetCode TextBlock) -->
                <controls:TypingPresenter x:Name="CodeRenderer"/>
            </StackPanel>
        </Border>

        <!-- Typing Input Area -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Type the code exactly as shown above:"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <TextBox x:Name="TypingBox"
                         Grid.Row="1"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="14"
                         PlaceholderText="Start typing here..."
                         MinHeight="150"/>
            </Grid>
        </Border>

        <!-- Session Completion Summary (Phase 4) + Retrospective (v0.4.0) -->
        <Border x:Name="CompletionBanner"
                Grid.Row="2"
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,8"
                Visibility="Collapsed">
            <StackPanel Spacing="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Spacing="2">
                        <TextBlock x:Name="CompletionTitle"
                                   Text="Session Complete!"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="CompletionStats"
                                   FontSize="11"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="6"
                                VerticalAlignment="Center">
                        <Button x:Name="CompletionActionButton"
                                FontSize="11"
                                Padding="8,4"
                                Visibility="Collapsed"/>
                        <Button x:Name="CompletionDismissButton"
                                Content="Dismiss"
                                FontSize="11"
                                Padding="8,4"/>
                    </StackPanel>
                </Grid>

                <!-- Session Retrospective (v0.4.0) — optional, dismissible -->
                <StackPanel x:Name="RetrospectiveSection"
                            Spacing="2"
                            Visibility="Collapsed"
                            AutomationProperties.Name="Session review">
                    <Border Height="1"
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                            Margin="0,2,0,2"/>
                    <TextBlock x:Name="RetrospectiveText"
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               TextWrapping="Wrap"
                               IsTextSelectionEnabled="True"
                               AutomationProperties.Name="Session observations"/>
                </StackPanel>

                <!-- Session Note (v0.4.0) — optional, never prompted -->
                <StackPanel x:Name="NoteSection" Spacing="2">
                    <HyperlinkButton x:Name="AddNoteLink"
                                     Content="Add a note"
                                     FontSize="11"
                                     Padding="0"
                                     TabIndex="100"
                                     AutomationProperties.Name="Add a note to this session"/>
                    <TextBox x:Name="NoteInput"
                             PlaceholderText="What's on your mind?"
                             MaxLength="280"
                             FontSize="11"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             TabIndex="101"
                             AutomationProperties.Name="Session note"
                             Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Action Buttons + Optional Intent Chips -->
        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Center"
                    Spacing="6">

            <!-- User Intent Chips (v0.4.0) — descriptive, not evaluative -->
            <StackPanel x:Name="IntentChipBar"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="4"
                        AutomationProperties.Name="Practice intent selection">
                <TextBlock Text="Intent:"
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,2,0"/>
                <ToggleButton x:Name="IntentFocusChip" Content="Focus"
                              FontSize="11" Padding="8,3" CornerRadius="12" MinWidth="0"
                              AutomationProperties.Name="Focus intent — concentrated practice"/>
                <ToggleButton x:Name="IntentChallengeChip" Content="Challenge"
                              FontSize="11" Padding="8,3" CornerRadius="12" MinWidth="0"
                              AutomationProperties.Name="Challenge intent — push beyond comfort"/>
                <ToggleButton x:Name="IntentMaintenanceChip" Content="Maintenance"
                              FontSize="11" Padding="8,3" CornerRadius="12" MinWidth="0"
                              AutomationProperties.Name="Maintenance intent — keeping skills sharp"/>
                <ToggleButton x:Name="IntentExplorationChip" Content="Exploration"
                              FontSize="11" Padding="8,3" CornerRadius="12" MinWidth="0"
                              AutomationProperties.Name="Exploration intent — trying something new"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="12">
                <Button x:Name="StartButton" Content="Start Test" Style="{ThemeResource AccentButtonStyle}"/>
                <Button x:Name="ResetButton" Content="Reset"/>
                <Button x:Name="SkipButton" Content="Skip"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
