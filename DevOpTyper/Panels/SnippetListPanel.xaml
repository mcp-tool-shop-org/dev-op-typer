<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.SnippetListPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
            <TextBlock Text="Snippets" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock x:Name="CountText" Text="(0)" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="LanguageFilter" 
                      HorizontalAlignment="Stretch"
                      SelectionChanged="LanguageFilter_SelectionChanged">
                <ComboBoxItem Content="All Languages" IsSelected="True"/>
            </ComboBox>

            <ComboBox x:Name="DifficultyFilter" 
                      Grid.Column="1"
                      Width="140"
                      Margin="8,0,0,0"
                      SelectionChanged="DifficultyFilter_SelectionChanged">
                <ComboBoxItem Content="All Levels" IsSelected="True"/>
                <ComboBoxItem Content="Beginner" Tag="1"/>
                <ComboBoxItem Content="Easy" Tag="2"/>
                <ComboBoxItem Content="Intermediate" Tag="3"/>
                <ComboBoxItem Content="Advanced" Tag="4"/>
                <ComboBoxItem Content="Expert" Tag="5"/>
            </ComboBox>
        </Grid>

        <!-- List -->
        <ListView x:Name="SnippetList" 
                  Grid.Row="2"
                  SelectionMode="Single"
                  SelectionChanged="SnippetList_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8,12" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Language Badge -->
                        <Border Grid.RowSpan="2"
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding Language}" 
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </Border>

                        <!-- Title -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Title}" 
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>

                        <!-- Difficulty Badge -->
                        <Border Grid.Column="2"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="8,2">
                            <TextBlock Text="{Binding DifficultyLabel}" FontSize="11"/>
                        </Border>

                        <!-- Details -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="{Binding CharCount, Converter={StaticResource CharCountConverter}}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding EstimatedSeconds, Converter={StaticResource TimeConverter}}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
