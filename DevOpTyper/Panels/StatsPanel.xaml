<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.StatsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <TextBlock Text="Live Statistics"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <!-- WPM -->
                <StackPanel>
                    <TextBlock Text="Words Per Minute"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="WpmText"
                               Text="0"
                               FontSize="32"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Accuracy -->
                <StackPanel>
                    <TextBlock Text="Accuracy"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="AccuracyText"
                               Text="100%"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                </StackPanel>

                <!-- Errors -->
                <StackPanel>
                    <TextBlock Text="Errors"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="ErrorsText"
                               Text="0"
                               FontSize="20"/>
                </StackPanel>

                <!-- Progress -->
                <StackPanel>
                    <TextBlock Text="Progress"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <ProgressBar x:Name="ProgressBar"
                                 Value="0"
                                 Maximum="100"
                                 Margin="0,4,0,0"/>
                    <TextBlock x:Name="ProgressText"
                               Text="0 / 0 chars"
                               FontSize="12"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- XP -->
                <StackPanel>
                    <TextBlock Text="XP Earned"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="XpText"
                               Text="+0 XP"
                               FontSize="18"
                               Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                </StackPanel>

                <!-- Pacing indicator (Phase 3) — informational, never steals focus -->
                <TextBlock x:Name="PacingLabel"
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Visibility="Collapsed"
                           AutomationProperties.Name="Session pacing - informational only"
                           AutomationProperties.LiveSetting="Off"
                           IsTextSelectionEnabled="True"
                           IsTabStop="False"/>

                <!-- Orientation cue (v0.5.0) — subtle context, never steals focus -->
                <TextBlock x:Name="OrientationCue"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Visibility="Collapsed"
                           AutomationProperties.Name="Session context - informational only"
                           AutomationProperties.LiveSetting="Off"
                           IsTextSelectionEnabled="True"
                           IsTabStop="False"
                           TextWrapping="Wrap"
                           Opacity="0.8"/>

                <!-- Divider -->
                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4"/>

                <!-- Weak Spots Section -->
                <TextBlock Text="Weak Spots"
                           FontSize="14"
                           FontWeight="SemiBold"
                           AutomationProperties.HeadingLevel="Level2"/>

                <!-- Weakness summary with trajectory (Phase 3) -->
                <TextBlock x:Name="WeaknessSummaryText"
                           FontSize="10"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Visibility="Collapsed"
                           AutomationProperties.Name="Weakness summary"
                           IsTextSelectionEnabled="True"/>

                <TextBlock x:Name="WeakSpotsEmpty"
                           Text="Complete a few sessions to see your weaknesses."
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="11"
                           TextWrapping="Wrap"/>

                <StackPanel x:Name="WeakSpotsContainer" Spacing="6" Visibility="Collapsed"/>

                <!-- Divider -->
                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4"/>

                <!-- Recent Sessions Section -->
                <TextBlock Text="Recent Sessions"
                           FontSize="14"
                           FontWeight="SemiBold"
                           AutomationProperties.HeadingLevel="Level2"/>

                <TextBlock x:Name="HistoryEmpty"
                           Text="No sessions recorded yet."
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="11"/>

                <StackPanel x:Name="HistoryContainer" Spacing="6" Visibility="Collapsed"/>

                <!-- Lifetime Stats Summary -->
                <Border x:Name="LifetimeStatsPanel"
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="6"
                        Padding="10"
                        Visibility="Collapsed">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Lifetime"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="LifetimeText"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Border x:Name="IdentityDivider" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" Visibility="Collapsed"/>

                <!-- Typist Identity Section (v0.4.0 Phase 4) — longitudinal self-portrait -->
                <TextBlock x:Name="IdentityHeader"
                           Text="Your Typing"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Visibility="Collapsed"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel x:Name="IdentityContainer" Spacing="4" Visibility="Collapsed"
                            AutomationProperties.Name="Longitudinal typing identity"/>

                <!-- Divider -->
                <Border x:Name="TrendDivider" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" Visibility="Collapsed"/>

                <!-- Trend Section -->
                <TextBlock x:Name="TrendHeader"
                           Text="Trends"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Visibility="Collapsed"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel x:Name="TrendContainer" Spacing="6" Visibility="Collapsed"/>

                <!-- Divider -->
                <Border x:Name="IntentPatternDivider" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" Visibility="Collapsed"/>

                <!-- Intent Patterns Section (v0.4.0) -->
                <TextBlock x:Name="IntentPatternHeader"
                           Text="By Intent"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Visibility="Collapsed"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel x:Name="IntentPatternContainer" Spacing="6" Visibility="Collapsed"
                            AutomationProperties.Name="Intent pattern averages"/>

                <!-- Divider -->
                <Border x:Name="PatternDivider" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" Visibility="Collapsed"/>

                <!-- Patterns Section (v0.4.0) — observational, not prescriptive -->
                <TextBlock x:Name="PatternHeader"
                           Text="Patterns"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Visibility="Collapsed"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel x:Name="PatternContainer" Spacing="4" Visibility="Collapsed"
                            AutomationProperties.Name="Practice pattern observations"/>

                <!-- Divider -->
                <Border x:Name="SuggestionDivider" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,4" Visibility="Collapsed"/>

                <!-- Suggestions Section -->
                <TextBlock x:Name="SuggestionHeader"
                           Text="Suggestions"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Visibility="Collapsed"
                           AutomationProperties.HeadingLevel="Level2"/>

                <StackPanel x:Name="SuggestionContainer" Spacing="6" Visibility="Collapsed"
                            AutomationProperties.Name="Practice suggestions"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
