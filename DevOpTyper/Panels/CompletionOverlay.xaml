<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="DevOpTyper.Panels.CompletionOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Visibility="Collapsed">

    <Grid Background="#80000000">
        <Border x:Name="ContentCard"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="16"
                Padding="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="320"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <CompositeTransform x:Name="CardTransform" ScaleX="0.8" ScaleY="0.8"/>
            </Border.RenderTransform>

            <StackPanel Spacing="16" HorizontalAlignment="Center">
                <FontIcon x:Name="StatusIcon" 
                          Glyph="&#xE73E;" 
                          FontSize="64"
                          Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                          HorizontalAlignment="Center"/>

                <TextBlock x:Name="TitleText" 
                           Text="Excellent!" 
                           FontSize="28" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock x:Name="WpmText" 
                               Text="WPM: 0" 
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="AccuracyText" 
                               Text="Accuracy: 100%" 
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="XpText" 
                               Text="+0 XP" 
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource SystemFillColorCautionBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="ContinueButton"
                        Content="Continue"
                        Style="{ThemeResource AccentButtonStyle}"
                        HorizontalAlignment="Center"
                        MinWidth="120"
                        Click="ContinueButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
