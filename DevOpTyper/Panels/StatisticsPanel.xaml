<UserControl
    x:Class="DevOpTyper.Panels.StatisticsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="400">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
        <StackPanel Spacing="24">
            <!-- Header -->
            <TextBlock Text="Statistics" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="{StaticResource DotTextBrush}"/>

            <!-- Personal Bests Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Personal Bests" 
                           FontSize="16" 
                           FontWeight="Medium"
                           Foreground="{StaticResource DotAccent1Brush}"/>
                
                <Grid ColumnSpacing="16" RowSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Best WPM -->
                    <Border Grid.Column="0" Grid.Row="0" 
                            Background="{StaticResource DotSurfaceBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Best WPM" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="BestWpmText" 
                                       Text="0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DotAccent1Brush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Best Accuracy -->
                    <Border Grid.Column="1" Grid.Row="0" 
                            Background="{StaticResource DotSurfaceBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Best Accuracy" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="BestAccuracyText" 
                                       Text="0%" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DotAccent2Brush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Perfect Streak -->
                    <Border Grid.Column="0" Grid.Row="1" 
                            Background="{StaticResource DotSurfaceBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Best Streak" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="BestStreakText" 
                                       Text="0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DotAccentWarnBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Fastest Perfect -->
                    <Border Grid.Column="1" Grid.Row="1" 
                            Background="{StaticResource DotSurfaceBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Best Perfect" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="FastestPerfectText" 
                                       Text="0 WPM" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Today's Progress -->
            <StackPanel Spacing="8">
                <TextBlock Text="Today" 
                           FontSize="16" 
                           FontWeight="Medium"
                           Foreground="{StaticResource DotAccent1Brush}"/>

                <Border Background="{StaticResource DotSurfaceBrush}" 
                        CornerRadius="8" Padding="16">
                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock x:Name="TodaySessionsText" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource DotTextBrush}"/>
                            <TextBlock Text="Sessions" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock x:Name="TodayWpmText" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource DotTextBrush}"/>
                            <TextBlock Text="Avg WPM" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock x:Name="TodayAccuracyText" 
                                       Text="0%" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource DotTextBrush}"/>
                            <TextBlock Text="Avg Acc" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Lifetime Stats -->
            <StackPanel Spacing="8">
                <TextBlock Text="All Time" 
                           FontSize="16" 
                           FontWeight="Medium"
                           Foreground="{StaticResource DotAccent1Brush}"/>

                <Border Background="{StaticResource DotSurfaceBrush}" 
                        CornerRadius="8" Padding="16">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Total Sessions" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="TotalSessionsText" 
                                       Text="0" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Total Characters" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="TotalCharsText" 
                                       Text="0" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Time Practiced" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="TotalTimeText" 
                                       Text="0m" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Average WPM" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="AvgWpmText" 
                                       Text="0" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Average Accuracy" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="AvgAccuracyText" 
                                       Text="0%" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Perfect Sessions" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="PerfectSessionsText" 
                                       Text="0" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Hardcore Sessions" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="HardcoreSessionsText" 
                                       Text="0" 
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DotTextBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Profile Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Profile" 
                           FontSize="16" 
                           FontWeight="Medium"
                           Foreground="{StaticResource DotAccent1Brush}"/>

                <Border Background="{StaticResource DotSurfaceBrush}" 
                        CornerRadius="8" Padding="16">
                    <StackPanel Spacing="12">
                        <Grid>
                            <TextBlock Text="Level" 
                                       Foreground="{StaticResource DotTextMutedBrush}"/>
                            <TextBlock x:Name="LevelText" 
                                       Text="1" 
                                       HorizontalAlignment="Right"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="{StaticResource DotAccent1Brush}"/>
                        </Grid>

                        <StackPanel Spacing="4">
                            <Grid>
                                <TextBlock Text="XP Progress" 
                                           Foreground="{StaticResource DotTextMutedBrush}"/>
                                <TextBlock x:Name="XpText" 
                                           Text="0 / 240" 
                                           HorizontalAlignment="Right"
                                           Foreground="{StaticResource DotTextBrush}"/>
                            </Grid>
                            <ProgressBar x:Name="XpProgressBar" 
                                         Value="0" 
                                         Maximum="100"
                                         Height="6"
                                         CornerRadius="3"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
