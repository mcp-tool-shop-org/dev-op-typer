<UserControl
    x:Class="DevOpTyper.Controls.TypingPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer x:Name="PromptScroller"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  MaxHeight="400"
                  Padding="4">
        <RichTextBlock x:Name="PromptBlock"
                       FontFamily="Consolas"
                       FontSize="15"
                       LineHeight="24"
                       TextWrapping="Wrap"
                       IsTextSelectionEnabled="False"
                       CharacterSpacing="20"
                       Foreground="#FFB7C0D6"/>
    </ScrollViewer>
</UserControl>
