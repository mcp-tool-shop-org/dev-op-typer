<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource DotBgBrush}"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DotTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="MutedText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource DotTextMutedBrush}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style x:Key="DotCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DotSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="14"/>
    </Style>

</ResourceDictionary>
